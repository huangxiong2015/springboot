<!DOCTYPE html>
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<c:set var="ctx" value="${pageContext.request.contextPath }" scope="request" />

<!--[if IE 8 ]>    <html class="ie8" lang="zh-CN"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie9" lang="zh-CN"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html lang="zh-CN">
<!--<![endif]-->

<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<c:import url ="/WEB-INF/jsp/include/main/constants.jsp"/>
<%-- 	<link rel="stylesheet" href="${ctx}/css/app/goods.css"> --%>
	<title>个人账户详情</title>
	<style>
		.col-xs-1{padding-left:0px; padding-right:0px;}
		.col-xs-1 label{margin-top:10px;}
		.col-xs-11 input{width:250px;}
		.reset_btn{border: 1px solid #e2e2e2;padding: 10px 15px;border-radius: 3px;margin-left:20px;}
		.reset_btn:hover{border-color:#b1191a;color:#919191;}
		.invalid{border:1px solid #b1191a;}
		.checktext{float:left;margin-top:10px;margin-left:10px;}
		.c_r{color:#b1191a;}
.input-title {position: relative;margin-bottom: 4px;height: 48px;line-height: 48px;color: #666;font-size: 14px;}
.input-title:before {content: '';display: inline-block;margin-right: 5px;width: 3px;height: 15px;vertical-align: -3px;background: #d48081;}
.contactInfo{padding-bottom:20px;}
.cRed {display: inline-block; margin-right: 6px; color: #b1191a;font-size: 16px; vertical-align: -3px;}
.ms-controller{visibility: hidden;}
.lh32{line-height: 32px;}
	</style>
	
</head>

<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

	<!---index header  start   ---->
	<jsp:directive.include file="../include/main/header.jsp" />
	<!---index header  end   ---->
	 <!---index nav  start   ---->
	<jsp:directive.include file="../include/main/menu.jsp" />
	<!---index nav  end   ---->
	  
	  <!-- 右边内容显示 -->
	  <div class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<a href="#" class="header_tab pitch_tab">个人信息详情</a>
		</section>
	    <!-- Main content -->
		<section ms-controller="list" class="content container-fluid ms-controller">	
		<input type="hidden" id="id" value="${id }" />
		<input type="hidden" id="loginId" value="${loginId }" />	
			<div id="contactInfo" class="area contactInfo ovh" style="display:block;">
				<h2 class="input-title">联系人信息</h2>
				<div class="row mt20">
					<div class="col-xs-1 tr">
						<label>个人编码：</label>
					</div>
					<div class="col-xs-11 c5e">
						<span class="lh32">{{@id}}</span>
					</div>
				</div>	
				<div class="row mt20">
					<div class="col-xs-1 tr">
						<label>联系人姓名：</label>
					</div>
					<div class="col-xs-11 c5e">
						<span class="lh32" :text="@contactInfo.name"></span>
					</div>
				</div>
				<div class="row mt20">
					<div class="col-xs-1 tr">
						<label>手机号码：</label>
					</div>
					<div class="col-xs-11 c5e">
						<span class="lh32" :text="@contactInfo.telNumber"></span>
					</div>
				</div>
				<div class="row mt20">
					<div class="col-xs-1 tr">
						<label>固定电话：</label>
					</div>
					<div class="col-xs-11 c5e">
						<span class="lh32" :text="@contactInfo.fixedTel"></span>
					</div>
				</div>
				<div class="row mt20">
					<div class="col-xs-1 tr">
						<label>邮箱：</label>
					</div>
					<div class="col-xs-11 c5e">
						<span class="lh32" :text="@contactInfo.mail"></span>
					</div>
				</div>
				<div class="row mt20">
					<div class="col-xs-1 tr">
						<label>QQ：</label>
					</div>
					<div class="col-xs-11 c5e">
						<span class="lh32" :text="@contactInfo.qq"></span>
					</div>
				</div>
				<div class="row mt20">
					<div class="col-xs-1 tr">
						<label>职位：</label>
					</div>
					<div class="col-xs-11 c5e">
						<span class="lh32" :for="(index,ele) in @positionList" :text="ele.name" :attr="{id:ele.id}" :if="ele.id == @contactInfo.personalTitle"></span>
					</div>
				</div>
				<div class="row mt20">
					<div class="col-xs-1 tr">
						<label>联系地址：</label>
					</div>
					<div class="col-xs-11 c5e">
						<span class="lh32">{{@contactInfo.provinceName}}{{@contactInfo.cityName}}{{@contactInfo.countryName}}{{@contactInfo.address}}</span>
					</div>
				</div>
			</div>				
		</section>
		<!-- /.content -->
	 
	</div>	  
	   
	<script type="text/javascript">
		var selectCatid = "225,226";
	</script>
	<!---footer  start   ---->
	<jsp:directive.include file="../include/main/footer.jsp" />
	<!---footer  end   ---->

</div>	    
<!-- ./wrapper -->
 <script>
 var detailList = avalon.define({
		$id: "list",
		list: [],
		contactInfo:[],//联系人信息
 		id: getQueryString("id"),
 		corporationId: getQueryString("corporationId"),
 		positionList:[{"id":"buyer","name":"采购员"},{"id":"purchasingManager","name":"采购经理"},{"id":"engineer","name":"工程师"},{"id":"other","name":"其他"}],//职业列表
	});
 
 $.aAjax({
		url:ykyUrl.party + '/v1/customers/' + detailList.id ,
		type:'GET',
		success:function(res){
			detailList.contactInfo = res;
			
		},
		error:function(){
			console.log('error');
		}
	})
	
 </script>
</body>
</html>