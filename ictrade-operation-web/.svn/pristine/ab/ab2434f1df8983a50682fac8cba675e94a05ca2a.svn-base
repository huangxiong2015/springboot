/* 初始化  */
html,
body,
h1,
h2,
h3,
h4,
h5,
h6,
div,
dl,
dt,
dd,
ul,
ol,
li,
p,
table,
caption,
th,
td,
form,
input,
button,
textarea {
  margin: 0;
  padding: 0;
  list-style:none;
}

body,
textarea,
input,
button,
select {
  font: 12px/1.14 'Microsoft Yahei', Arial, Simsun,  Helvetica, sans-serif;
  color:#919191;
  outline: 0;
}

textarea,
input,
button,
select {
  color:#5e5e5e;
}

body {
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	font-weight: 400;
	background-color: #f7f7f7
}

img {
  border: 0;
}

input {
    border: 1px solid #e2e2e2;
    height: 32px;
    line-height: 32px;
	width:80px;
	border-radius:3px;
	padding-left:10px;
}

input:focus{
	border: 1px solid #919191;
}

button {
    height: 30px;
    width: 100px;
    border: 0;
    cursor: pointer;
	border-radius:3px;
}

label{
	font-weight:normal;
	margin-bottom:0px;
}

em, i, u {
	font-style: normal;
}

textarea{
	border: 1px solid #e2e2e2;
}

textarea:focus{
	border: 1px solid #919191;
}

/*h1,h2,h3,h4,h5,h6,.h1,.h2,.h3,.h4,.h5,.h6 {
