.content-wrapper .content-header{
	padding-top: 0;
	height:40px; 
	background-color:#FCFDFF;
	margin-top:0px;
}

.content-wrapper .content{
	background-color:#fff;
	min-height:300px;
	margin:10px;
}

.content-wrapper .content-header .header_tab{
	height: 40px;
    line-height: 40px;
    padding: 8px 20px 12px 20px;
    font-size: 14px;
    color: #919191;
}

.content-wrapper .content-header .pitch_tab{
	    background-color: #ecf0f5;
	    border-top: 2px solid #c11f2e;
}

.content {
	color: #666;
}

.cRed {
	margin-right: 5px;
	color: #f00;
}

.form-wrap {
	margin: 10px 0;
	padding: 20px 10px;
	border: 1px solid #eee;
}

.verify-status {
	margin-left: 55px;
	padding: 4px 6px;
	border-radius: 4px;
	color: #fff;
	font-weight: normal;
}

.verify-status.primary {
	background-color: #3c8dbc;
	border-color: #367fa9;
}

.verify-status.success {
	background-color: #13af15;
	border-color: #13af15;
}

.verify-status.info {
	background-color: #31708f;
	border-color: #31708f;
}

.verify-status.danger {
	background-color: #a94442;
	border-color: #a94442;
}

.infoFrom {
	width: 1060px;
}
.form-wrap h5 {
	margin: 20px;
	padding-top: 20px;
	border-top: 1px solid #eee;
}
.form-wrap .text {
	line-height: 30px;
}
.form-wrap .log {
	padding-bottom: 10px;
	border-top: none;
	border-bottom: 1px solid #eee;
}

.infoFrom .status > div {
	padding-left: 0;
}

.title {
	padding-left: 10px;
}

.title em {
	font-style: normal;
	margin-left: 30px;
}
.credit-memo {
	margin-top: 47px;
	margin-left: -15px;
}
.info {
	margin: 20px;
	padding-top: 20px;
	border: 1px solid #eee;
}
.log-list {
	padding: 10px 15px;
	border: 1px solid #eee;
	list-style: none;
}
.log-list li {
	line-height: 30px;
}
.btns {
	padding-top: 20px;
}
.btns .cancel {
	margin-left: 10px;
}
.img-thumbnail {
	width: 160px;
	height: 120px;
}
.layui-layer-content .img-thumbnail {
	width: auto;
	height: auto;
}