<!DOCTYPE html>
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<html lang="zh-CN">
<head> 
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>限购管理</title>
<c:import url ="/WEB-INF/jsp/include/lemon/constants.jsp"/>
<style>
.s-text{padding-top:7px;display:inline-block;}
</style>
</head>
<body>
<c:set var="ctx" value="${pageContext.request.contextPath }" scope="request" /> 
<body class="hold-transition skin-blue sidebar-mini detection">
<div class="wrapper"> 
<c:import url ="/WEB-INF/jsp/include/lemon/layout.jsp"/>
  <div class="content-wrapper" id="distributor-detail">
    <section class="content" >
		<div class="row">
          <section class="col-lg-12">
	            <div class="box box-danger ">
	                <!-- Morris chart - Sales -->
	                  <input id="detailId" type="hidden" value="${id}" />
	                  <div class="box-header with-border">
	                    <h3 class="box-title">限购管理</h3>
	                  </div>
	                  <div id="limitPurch" class="box-body form-horizontal">
	                  		<div class="form-group ">
                               <div class="col-md-11">
                                   <label for="specurl" class="col-sm-3 control-label">限购名称</label>
                                    <div class="col-sm-4">
                                    	<span class="s-text" v-text="initData.title"></span>
                                   	</div>
                               </div>
                           </div>
                           <div class="form-group ">
                               <div class="col-md-11">
                                   <label for="specurl" class="col-sm-3 control-label">限购时间</label>
                                   <div class="col-sm-4">
                                   		<span class="s-text" v-text="initData.startDate + '~' + initData.endDate"></span>
                                   </div>
                               </div>
                           </div>
                           <!-- <div class="form-group ">
                               <div class="col-md-11">
                                   <label for="specurl" class="col-sm-3 control-label">限购件数</label>
                                   <div class="col-sm-4">
                                   		<span class="s-text" v-text="initData.limitNum"></span>
                                   </div>
                               </div>
                           </div> -->
                            <div class="form-group ">
                               <div class="col-md-11">
                                   <label for="specurl" class="col-sm-3 control-label">限购商品</label>
                                   <div class="col-sm-6">
                                   		<rowspan-table
			                        		:columns="columns"
			                        		:api="prdListApi"
			                        		:query-params="queryParams"
			                        		:default-tip="defaultTip"
			                        		:pageflag="pageflag"
			                        	></rowspan-table>
                                   </div>
                               </div>
                           </div>
                           <div class="box-footer text-center"> 
                           <button type="button" class="btn btn-concle c-btn" @click="cancel">返回</button>
                           </div>
                      </div>
      			</div> 
            </section>
		</div>
    </section>
   </div>
</div>
<jsp:directive.include file="../include/lemon/footer.jsp" />
<script type="text/javascript" src="${ctx}/assets/lemon/1.0.0/lemon-grid.js"></script>
<script type="text/javascript" src="${ctx}/js/app/limitPurchDetail.js"></script> 
</body>
</html>