<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>    
<%@taglib prefix="shiro" uri="http://shiro.apache.org/tags" %>
<%@taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<%@ taglib prefix="spring" uri="http://www.springframework.org/tags" %> 
<%@taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<c:set var="ctx" value="${pageContext.request.contextPath }" scope="request" />
<html>
<c:import url ="/WEB-INF/jsp/include/main/constants.jsp"/>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>查看代金券</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="http://cdn.bootcss.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Theme style -->
<!--   <link rel="stylesheet" href="${ctx}/css/common/base.css"> -->
  <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
<link rel="stylesheet" type="text/css" href="${ctx}/js/lib/laydate/need/laydate.css"/>
  <link rel="stylesheet" href="${ctx}/css/app/setCouponInfo.css">
  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
<!---index header  start   ---->
	<jsp:directive.include file="../include/main/header.jsp" />
	<!---index header  end   ---->
	 <!---index nav  start   ---->
	<jsp:directive.include file="../include/main/menu.jsp" />
	<!---index nav  end   ---->

  
  <!-- 右边内容显示 -->
  <div class="content-wrapper" ms-controller="data">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<span class="header_tab" :if="@action=='examine'">查看代金券</span>
		<span class="header_tab" :if="@action=='edit'">修改代金券</span>
	</section>
    <!-- Main content -->
	<section class="content ce_content" >
		<div class="panel panel-default" style="padding: 0 0;">
		  <div class="panel-body">
		  	<!-- main_cont-->
		  	<div class="main_cont">
		  		<!-- main_cont_l -->
			    <div class="main_cont_l">
			    	<!-- panel start -->
			    	<div class="panel panel-default">
					  <div class="panel-heading">
					    <h3 class="panel-title">代金券基本属性</h3>
					  </div>
					  <div class="panel-body">
					    <ul class="list-group">
						  <li class="item">
						  	<span class="item_label st2">代金券类型：</span>
						  	<div class="item_r">
						  		<p >
						  			<span :if="@data.couponCate == 'PLATFORM_PROMO'">平台推广劵</span>
									<span :if="@data.couponCate == 'EXACT_PROMO'">定向推广劵</span>
									<span :if="@data.couponCate == 'OFFLINE_PROMO'">地推类型劵</span>
						  		</p>
						  	</div>
						  </li>
						  <li class="item">
						  	 <span class="item_label st2">代金券名称：</span>
							 <div class="item_r">
								<p ms-text="@data.name"></p>
							 </div>
						  </li>
						  <li class="item">
						  	 <span class="item_label st2">有效时间：</span>
							 <div class="item_r">
								<p >
									<span :if="(@data.thruTypeId == 'EXACT_DATE_ZONE')||(@data.thruTypeId == 'exact_date_zone')">限时领取</span>
									<span :if="(@data.thruTypeId == 'FROM_GET_DATE')||(@data.thruTypeId == 'from_get_date')">限时使用</span>
							 	</p>
								<p class="mt10">
							 		<span class="item_label st2"></span>
							 		<!-- 限时领取 -->
							 		<span style="display:inline-block;" :visible="@data.thruTypeId=='EXACT_DATE_ZONE'">
								 		<span class="rel" ms-text="@data.fromDate"></span>至<span ms-text="@data.thruDate"></span>
					                </span>
					                <!-- 限时领取 -->
					                <span style="display:inline-block;" :visible="@data.thruTypeId=='FROM_GET_DATE'">
					                	<span>领取后<em ms-text="@data.limitMonth"></em>个月内有效</span>
					                </span>
							 	</p>
							 </div>
						  </li>
						  <li class="item">
						  	 <span class="item_label st2">总发行量：</span>
							 <div class="item_r">
								<p>
									<span ms-text="@data.totalQty" :if="@action=='examine'"></span>
									<input type="text" class="s_input" style="width:100px;margin-right:5px;" :if="@action=='edit'" ms-duplex="@data.totalQty" />
									<span>张</span>
								</p>
							 </div>
						  </li>
						  <li class="item">
						  	 <span class="item_label st2">单张面值：</span>
							 <div class="item_r">
								<p>
									<span  ms-text="@data.unitAmount"></span>
							 		<span :if="@data.couponCurrency == 'USD'"> USD</span>
									<span :if="@data.couponCurrency == 'CNY'"> RMB</span>
								</p>
							 </div>
						  </li>
						</ul>
					  </div>
					</div>
					<!-- panel end -->
			    	<!-- panel start -->
			    	<div class="panel panel-default">
					  <div class="panel-heading">
					    <h3 class="panel-title">使用条件</h3>
					  </div>
					  <div class="panel-body">
					    <ul class="list-group">
						  <li class="item">
						  	<span class="item_label st2">可用货品：</span>
						  	<div class="item_r">
						  		<p :if="(@data.vendorName)||(@data.brandName)">
						  			<span >供应商:</span>
						  			<span :if="@data.vendorName">{{@data.vendorName}}</span>
						  			<span :if="!@data.vendorName">不限</span>
						  		</p>
						  		<p :if="(@data.vendorName)||(@data.brandName)">
						  			<span class="item_label st2"></span><span >制造商</span>
						  			<span :if="@data.brandName">{{@data.brandName}}</span>
						  			<span :if="!@data.brandName">不限</span>
						  		</p>
						  		<p :if="(!@data.vendorName)&&(!@data.brandName)">
						  			<span :if="!@data.brandName">全平台通用</span>
						  		</p>
						  	</div>
						  </li>
						  <li class="item">
						  	 <span class="item_label st2">使用限额：</span>
							 <div class="item_r">
								<p class="content_txt">
									<span>单笔订单中此优惠券指定货品金额满</span>
									<span class="ml5"><em  ms-text="@data.consumeLimitAmount"></em></span>
									<span class="currency ml5 mr5"><em :visible="@data.couponCurrency=='CNY'">RMB</em><em :visible="@data.couponCurrency=='USD'">USD</em></span>
									<span>使用</span>
								</p>
							 </div>
						  </li>  
						</ul>
					  </div>
					</div>
					<!-- panel end -->
					<!-- panel start -->
			    	<div class="panel panel-default">
					  <div class="panel-heading">
					    <h3 class="panel-title">领取条件</h3>
					  </div>
					  <div class="panel-body">
					    <ul class="list-group" >
						  <li class="item">
						  	<span class="item_label st2">推广方式：</span>
						  	<div class="item_r">
						  		<p>
							  		<span :if="(@data.couponMethodType=='FREE_WGET')||(@data.couponMethodType=='free_wget')">自助领取</span>
							  		<span :if="(@data.couponMethodType=='EXACT_SEND')||(@data.couponMethodType=='exact_send')">定向发放</span>
						  		</p>
						  	</div>
						  </li>
						  <li class="item">
						  	 <span class="item_label st2">推广对象：</span>
							 <div class="item_r">
								<p>
									<span :if="(@data.couponPartyType=='UNLIMIT')||(@data.couponPartyType=='unlimit')">不限</span><span :if="(@data.couponPartyType=='PARTY_GROUP')||(@data.couponPartyType=='party_group')">企业用户</span>
									<span :if="(@data.couponPartyType=='PERSON')||(@data.couponPartyType=='person')">个人用户</span>
								</p>
							 </div>
						  </li>  
						</ul>
					  </div>
					</div>
					<!-- panel end -->
					<!-- panel start -->
			    	<div class="panel panel-default">
					  <div class="panel-heading">
					    <h3 class="panel-title">其他</h3>
					  </div>
					  <div class="panel-body">
					    <ul class="list-group" style="margin-bottom:0;">
						  <li class="item">
						  	<span class="item_label" style="min-width:106px;margin-right:10px;">代金券申请凭证：</span>
						  	<input type="hidden" name="proofUrl" id="proofUrl" />
						  	<div class="item_r">
						  		<p>
						  		<span class="proof_img"><img  id="proofImg" ms-attr="{src:@data.approvedProof}" alt="" ms-click="@showBigImage();"/></span>
						  		<img src="" class="big_img" style="display:none;" ms-attr="{src:@data.approvedProof}"/>
						  		</p>
						  	</div>
						  </li>
						  <li class="item clear_fix">
						  	 <span class="item_label" style="min-width:106px;margin-right:10px;">代金券备注：</span>
							 <div class="item_r">
								<p ms-text="@data.couponText"></p>
							 </div>
						  </li>  
						</ul>
					  </div>
					</div>
					<!-- panel end -->
					<div class="btn_bar">
						<span class="y_btn" style="margin-left:134px;" ms-click="@changeQty" :if="@action=='edit'">修改代金券</span>
						<a class="r_btn ml20" href="${ctx}/couponList.htm" :if="@action=='edit'">返回</a>
						<a class="r_btn" style="margin-left:134px;" href="${ctx}/couponList.htm" :if="@action!='edit'">返回</a>
					</div>
					<!-- 操作日志 -->
					<div class="panel panel-default mt30" :if="@logListNull" >
					  <div class="panel-heading">
					    <h3 class="panel-title">操作日志</h3>
					  </div>
					  <div class="panel-body">
					    <table class="table mt10">
					      <thead>
					        <tr>
					          <th>序号</th>
					          <th>操作人</th>
					          <th>时间</th>
					          <th>操作记录</th>
					        </tr>
					      </thead>
					      <tbody>
					        <tr ms-for="($i, item) in @logList">
						 		<td>{{$i+1}}</td>
						 		<td>{{item.partyName}}</td>
						 		<td>{{item.createdDate}}</td>
						 		<td :attr="{title:item.comment}">{{item.comment}}</td>
							</tr>
					      </tbody>
						 </table>
					  </div>
					</div>
					<!-- 操作日志 -->
			    </div>
			    
			    <!-- main_cont_l -->
			    <!-- main_cont_r -->
			    <div class="c_item_wrap">
					<div class="c_item">
						<div class="c_item_top">
							<p class="price"><span ms-text="@yetAnotherData.unitAmount"></span><span ms-if="@yetAnotherData.couponCurrency=='CNY'">元</span><span ms-if="@yetAnotherData.couponCurrency=='USD'">美元</span></p>
							<p>单笔订单满 <span ms-text="@yetAnotherData.consumeLimitAmount"></span><span ms-if="@yetAnotherData.couponCurrency=='CNY'">元</span><span ms-if="@yetAnotherData.couponCurrency=='USD'">美元</span>使用</p>
						</div>
						<div class="c_item_bottom">
							<p :if="(@yetAnotherData.vendorName)||(@yetAnotherData.brandName)">
								<span >供应商</span>
					  			<span :if="@yetAnotherData.vendorName" ms-text="@yetAnotherData.vendorName"></span>
					  			<span :if="!@yetAnotherData.vendorName">不限，</span>
					  			<span ></span><span >制造商</span>
					  			<span :if="@yetAnotherData.brandName" ms-text="@yetAnotherData.brandName"></span>
					  			<span :if="!@yetAnotherData.brandName">不限</span>
							</p>
							<p :if="(!@yetAnotherData.vendorName)&&(!@yetAnotherData.brandName)">
								<span >[ 全平台通用 ]</span>
							</p>
							<p ms-if="(@yetAnotherData.thruTypeId =='FROM_GET_DATE')||(@yetAnotherData.thruTypeId =='from_get_date')">有效期：领取后<em ms-text="@yetAnotherData.limitMonth"></em>个月内有效</p>
							<p ms-if="(@yetAnotherData.thruTypeId =='EXACT_DATE_ZONE')||(@yetAnotherData.thruTypeId =='exact_date_zone')">有效期：<span ms-text="@yetAnotherData.fromDateFormat"></span>至<span ms-text="@yetAnotherData.thruDateFormat"></span></p>
						</div>
					</div>
				</div>	
			    <!-- main_cont_r -->
			 </div>
			 <!-- main_cont-->
		  </div>
		</div>
	</section>
	<!-- /.content -->
  </div>
	
</div>
<!-- ./wrapper -->

<script type="text/javascript">
		var selectCatid = "242,250";
</script>
<!---footer  start   ---->
<jsp:directive.include file="../include/main/footer.jsp" />
<!---footer  end   ---->
<script>
	var thisPrefix ='${ctx}';
</script>
<script type="text/javascript" src="${ctx}/js/lib/plupload-2.1.2/js/plupload.full.min.js"></script>
<script src="${ctx}/js/app/editcoupon.js"></script>
</body>
</html>
