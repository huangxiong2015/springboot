        		layer.msg('请选择产品线');
        		return false;
        	}
        	_this.tabValue = 'credit';
        	_this.productGone = true;
        },
      //保存信用数据
        saveCreditData: function(){
        	var _this = this;
        	$('#createVendorCredit').submit();
        	if(!validate){
        		return false;
        	}
        	if(_this.vendorCreditVo.partyBankAccount.length === 0){
        		layer.msg('请填写银行资料');
        		return false;
        	}
        	
        	_this.tabValue = 'sales';
        	_this.creditGone = true;
        },
        //提交大表单
        saveData: function(){
        	var _this = this;
        	$('#createVendorSales').submit();
        	if(!validate){
        		return false;
        	}
        	
        	if(eval('('+$('#focusFields').val()+')').length === 0){
        		layer.msg('请输入关注领域')
        		return false;
        	}
        	
        	if(eval('('+$('#productCategorys').val()+')').length === 0){
        		layer.msg('请输入优势产品类别')
        		return false;
        	}
        	if(eval('('+$('#majorClients').val()+')').length === 0){
        		layer.msg('请输入主要客户')
        		return false;
        	}
        	
        	_this.vendorSaleInfoVo.supportCurrency = vm.supportCurrency.join(',');
        	
        	_this.vendorMap.VENDOR_SALE_INFOVO_FOCUSFIELDS = eval('('+$('#focusFields').val()+')').join(',');
        	_this.vendorMap.VENDOR_SALE_INFOVO_PRODUCTCATEGORYS = eval('('+$('#productCategorys').val()+')').join(',');
        	_this.vendorMap.VENDOR_SALE_INFOVO_MAJORCLIENTS = eval('('+$('#majorClients').val()+')').join(',');
        	 
        	var vendorObj = {
        			partyProductLineList: _this.partyProductLineList,
        			vendorCreditVo : _this.vendorCreditVo,
        			vendorInfoVo : _this.baseData,
        			vendorSaleInfoVo: _this.vendorSaleInfoVo,
        			map: _this.vendorMap
        	};
        	
        	syncData(ykyUrl.party + "/v1/vendorManage/addVendor", 'POST', vendorObj, function(res, err) {
        		if (!err) {
        			location.href = ykyUrl._this+'/vendor.htm';
        		}
        	});
        }
	},
	watch: {
		'baseData.deptId': function(newVal){
			getUserList(newVal);
		}
	}
