/*--bootstrap--*/

.coms{width: 57%;line-height: 17px;word-wrap: break-word;}

.colblue{color: #35a7ff;}
.remarks{
	position: absolute;
    width: 280px;
    height: auto;
    margin-top: 30px;
    margin-left: -160px;
    background-color: #fff;
    border: 1px solid #e2e2e2;
    padding: 10px 20px;
    text-align: left;
    color: #999;
    font-size: 12px;
    line-height: 20px;
    z-index: 999;
}
.remarks .triangle {
    display: block;
    width: 0;
    height: 0;
    border-width: 10px;
    border-style: solid;
    border-color: transparent transparent #ddd transparent;
    position: absolute;
    top: -20px;
    left: 44%;
}
.remarks .triangle em {
    display: block;
    width: 0;
    height: 0;
    border-width: 10px;
    border-style: solid;
    border-color: transparent transparent #fffef0 transparent;
    position: absolute;
    bottom: -12px;
    left: -10px;
}

.approveInfo_cal{background-color: #fff4d7;padding: 10px;margin-top: 10px;margin-bottom: 10px;}
.approveInfo_cal span{line-height: 20px;word-wrap: break-word;white-space: normal;}

/* 快递信息 */
.shipment_wrap *{
	-moz-box-sizing: content-box;  
    -webkit-box-sizing: content-box; 
    -o-box-sizing: content-box; 
    -ms-box-sizing: content-box; 
    box-sizing: content-box; 
}
.shipment_cont{
	overflow:auto;
	background: #f8f8f8;
	width: 86%;
	height: 166px;
	padding: 15px 5px 20px 17px;
	margin: 15px auto 0 auto;
	color: #333;
	letter-spacing: 0.48px;
}
.spmt_item{
	/* overflow:hidden; */
	position:relative;
	margin-left:5px;
	border-left:1px solid #ddd;
}
.spmt_item_l{
    float:left;
    width: 180px;
    line-height:18px;
    margin-right:20px;
    margin-left:6px;
}
.spmt_item_r{
	/* float:left; */
    /* width: 565px; */
    margin-left:212px;
    padding-bottom:10px;
}
.spmt_item p{
	line-height:18px;
}
.spmt_item .spmt_dots{
	display: block;
    width: 11px;
    height: 11px;
    position: absolute;
    background: #f8f8f8 url(./../../images/static/shipment_dot.png) no-repeat 0 0;
    left: -6px;
    top: 3px;
}
.vdn{visibility:hidden;}
.clearfloat:after{display:block;clear:both;content:"";visibility:hidden;height:0} 
.clearfloat{zoom:1}
/*  滚动条样式  */
.mCSB_scrollTools .mCSB_dragger:hover .mCSB_dragger_bar{background: #999;}
.mCSB_scrollTools .mCSB_dragger .mCSB_dragger_bar{width: 8px;background: #999;}
.mCSB_scrollTools .mCSB_draggerRail{width: 8px;background: #ECECEC;}
.mCustomScrollBox>.mCSB_scrollTools{width: 8px !important;}
.mCSB_scrollTools .mCSB_dragger:active .mCSB_dragger_bar, .mCSB_scrollTools .mCSB_dragger.mCSB_dragger_onDrag .mCSB_dragger_bar{background: #999;}

