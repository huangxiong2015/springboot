<!DOCTYPE html>
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<html lang="zh-CN">
<head> 
<title>分销商详情</title>
<c:import url ="/WEB-INF/jsp/include/lemon/constants.jsp"/> 
<c:set var="ctx" value="${pageContext.request.contextPath }" scope="request" /> 
<style>
	.form-horizontal .control-label{padding-top:0;}
</style>
</head>
<body class="hold-transition skin-blue sidebar-mini detection">
<div class="wrapper"> 
<c:import url ="/WEB-INF/jsp/include/lemon/layout.jsp"/>
  <div class="content-wrapper" id="distributor-detail">
	<section class="content-header">
	  <h1>
	    分销商
	    <small>详情</small>
	  </h1>
	  <ol class="breadcrumb">
	    <li><a href="./"><i class="fa fa-dashboard"></i> 首页</a></li>
	    <li class="active">分销商详情</li>
	  </ol>
	</section>   
	    
    <section class="content" >
		<div class="row">
          <section class="col-lg-12">
	            <div class="box box-danger ">
	                <!-- Morris chart - Sales -->
	                  <div class="box-header with-border">
	                    <h3 class="box-title">分销商信息</h3>
	                  </div>
	                  <div class="box-body form-horizontal"> 
                              <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="specurl" class="col-sm-3 control-label">分销商LOGO：</label>
                                      <div class="col-sm-5"> 
                                          <img alt="" :src="distributorData.newsAttachment && distributorData.newsAttachment.attachUrl ? distributorData.newsAttachment.attachUrl : '${ctx}/images/defaultImg01.jpg'"  width="160"/>
                                      </div> 
                                  </div>
                              </div>  
                              <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="brandName" class="col-sm-3 control-label">分销商名称：<span class="text-red">*</span></label>
                                      <div class="col-sm-5 control-text" > 
                                        {{distributorData.title}}
                                      </div>
                                  </div>
                              </div>  
                              <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="brandName" class="col-sm-3 control-label">分销商商品链接：<span class="text-red">*</span></label>
                                      <div class="col-sm-5 control-text" > 
                                        <a :href="distributorData.extend" target="_blank">{{distributorData.extend}}</a>
                                      </div>
                                  </div>
                              </div> 
                              <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="brandName" class="col-sm-3 control-label">排序位置：<span class="text-red">*</span></label>
                                      <div class="col-sm-5 control-text" > 
                                        {{distributorData.orderSeq}}
                                      </div>
                                  </div>
                              </div>  
                              <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="brandName" class="col-sm-3 control-label">分销商简介：<span class="text-red">*</span></label>
                                      <div class="col-sm-5 control-text" > 
                                        {{distributorData.abstracts}}
                                      </div>
                                  </div>
                              </div>   
                              <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="desc" class="col-sm-3 control-label">关于分销商：</label>
                                      <div class="col-sm-5 control-text" v-html="distributor.detail">  
                                      </div>
                                  </div>
                             </div>  
                             <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="desc" class="col-sm-3 control-label">主要代理线：</label>
                                      <div class="col-sm-5 control-text" v-html="agentName">  
                                      </div>
                                  </div>
                             </div>
                             <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="desc" class="col-sm-3 control-label">应用领域：</label>
                                      <div class="col-sm-5 control-text" v-html="applicationName">  
                                      </div>
                                  </div>
                             </div> 
                             <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="desc" class="col-sm-3 control-label">优势类别：</label>
                                      <div class="col-sm-5 control-text" v-html="advantageName">  
                                      </div>
                                  </div>
                             </div> 
                             <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="isShowActive" class="col-sm-3 control-label">显示活动图标：</label>
                                      <div class="col-sm-5 control-text"> 
                                      	 {{ isShowActive | activity }}
                                      </div>
                                  </div>
                             </div> 
                             <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="labelContent" class="col-sm-3 control-label">标签内容：</label>
                                      <div class="col-sm-5 control-text">  
                                      	{{ labelContent | activeType }}{{customContent ? '('+ customContent +')' : ''}}
                                      </div>
                                  </div>
                             </div> 
                             <div class="form-group ">
                                  <div class="col-md-11">
                                      <label for="labelContent" class="col-sm-3 control-label">标签链接：</label>
                                      <div class="col-sm-5 control-text">  
                                      	{{activityUrl ? activityUrl  : ''}}
                                      </div>
                                  </div>
                             </div>
                      </div>
      			</div> 
            </section>
            <div class="box-footer text-center"> 
                <button type="button" class="btn btn-concle c-btn" onclick="history.go(-1);">返回</button>
            </div> 
		</div>
		
    </section>
    
   </div>
</div>
<jsp:directive.include file="../include/lemon/footer.jsp" />  
<script type="text/javascript" src="${ctx}/js/app/distributorDetail.js"></script> 
</body>
</html>