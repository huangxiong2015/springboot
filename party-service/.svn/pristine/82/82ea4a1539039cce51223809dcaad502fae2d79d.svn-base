<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.yikuyi</groupId>
	<artifactId>party-service</artifactId>
	<version>1.5.0-02-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>party-service</name>
	<url>http://maven.apache.org</url>
	<properties>
		<!-- dependency configuration -->
		<dep.spring-boot.version>1.4.2.RELEASE</dep.spring-boot.version>
		<dep.spring.version>4.2.6.RELEASE</dep.spring.version>
		<dep.spring-security.version>4.1.0.RELEASE</dep.spring-security.version>
		<dep.jackson.version>2.4.0</dep.jackson.version>
		<dep.ykyframework.version>1.0.0-SNAPSHOT</dep.ykyframework.version>
		<dep.ykyframework.springboot.version>1.1.1-SNAPSHOT</dep.ykyframework.springboot.version>
		<dep.ykyframework.springbootclient.version>1.0.0-SNAPSHOT</dep.ykyframework.springbootclient.version>
		<dep.ykyframework.all.version>1.1.0-SNAPSHOT</dep.ykyframework.all.version>
		<dep.druid-version>1.0.29</dep.druid-version>

		<!-- plugin configuration -->
		<maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
		<maven-war-plugin.version>2.3</maven-war-plugin.version>
		<maven-replacer-plugin.version>1.5.3</maven-replacer-plugin.version>

		<!-- Project configuration -->
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.build.timestamp.format>yyyy-MM-dd HH:mm:ss</maven.build.timestamp.format>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<env.nexus.domain>https://develop.yikuyi.com:28443</env.nexus.domain> <!-- 私服库地址 -->

		<!-- ictrade-tools configuration -->
		<dep.ictrade-toos.version>1.3.0-SNAPSHOT</dep.ictrade-toos.version>

		<!-- entity configuration -->
		<dep.pay-entity.version>1.4.0-SNAPSHOT</dep.pay-entity.version>
		<dep.basedata-entity.version>1.4.0-SNAPSHOT</dep.basedata-entity.version>
		<dep.product-entity.version>1.4.0-SNAPSHOT</dep.product-entity.version>
		<dep.message-entity.version>1.5.0-02-SNAPSHOT</dep.message-entity.version>
		<dep.quotation-entity.version>1.3.0-SNAPSHOT</dep.quotation-entity.version>
		<dep.workflow-entity.version>1.4.0-SNAPSHOT</dep.workflow-entity.version>
		<dep.transaction-entity.version>1.3.3-SNAPSHOT</dep.transaction-entity.version>
		<dep.info-service.version>1.3.2-SNAPSHOT</dep.info-service.version>

	</properties>

	<distributionManagement>
		<repository>
			<id>nexus-releases</id>
			<url>${env.nexus.domain}/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>nexus-snapshots</id>
			<url>${env.nexus.domain}/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>


	<dependencyManagement>
		<dependencies>
		<dependency>
			<groupId>com.yikuyi</groupId>
			<artifactId>product-api-client</artifactId>			
		</dependency>
			<dependency>
				<!-- Import dependency management from Spring Boot -->
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-dependencies</artifactId>
				<version>${dep.spring-boot.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>com.ykyframework</groupId>
				<artifactId>framework-springboot</artifactId>
				<version>${dep.ykyframework.springboot.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>mock</id>
			<properties>
				<env.type>mock</env.type>
			</properties>
		</profile>
		<profile>
			<id>dev</id>
			<properties>
				<env.type>dev</env.type>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>sit</id>
			<properties>
				<env.type>sit</env.type>
			</properties>
		</profile>
		<profile>
			<id>sit1</id>
			<properties>
				<env.type>sit1</env.type>
			</properties>
		</profile>
		<profile>
			<id>hz-uat</id>
			<properties>
				<env.type>hz-uat</env.type>
			</properties>
		</profile>
		<profile>
			<id>perf</id>
			<properties>
				<env.type>perf</env.type>
			</properties>
		</profile>
		<profile>
			<id>prod</id>
			<properties>
				<env.type>prod</env.type>
			</properties>
		</profile>
		<profile>
			<id>sonar</id>
			<properties>
				<env.type>dev</env.type>
				<sonar.host.url>http://develop.yikuyi.com/sonarqube</sonar.host.url>
				<sonar.jacoco.reportMissing.force.zero>true</sonar.jacoco.reportMissing.force.zero>
				<argLine>-Xmx1024m</argLine>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>sonar-maven-plugin</artifactId>
						<version>2.7.1</version>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<!-- Minimal supported version is 2.4 -->
						<version>2.13</version>
						<configuration>
							<testFailureIgnore>true</testFailureIgnore>
							<runOrder>random</runOrder>
							<properties>
								<property>
									<name>listener</name>
									<value>org.sonar.java.jacoco.JUnitListener</value>
								</property>
							</properties>
						</configuration>
					</plugin>
				</plugins>
			</build>

			<dependencies>
				<dependency>
					<groupId>org.sonarsource.java</groupId>
					<artifactId>sonar-jacoco-listeners</artifactId>
					<version>3.8</version>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

	<modules>
		<module>party-entity</module>
		<module>party-api</module>
		<module>party-api-client</module>
	</modules>

</project>